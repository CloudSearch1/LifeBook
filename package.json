{
  "name": "lifebook",
  "version": "1.0.0",
  "description": "跨平台日记应用",
  "main": "index.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:web\"",
    "dev:backend": "cd backend && npm run dev",
    "dev:web": "cd platforms/web && npm run dev",
    "build": "npm run build:shared && npm run build:backend && npm run build:web",
    "build:shared": "cd shared && npm run build",
    "build:backend": "cd backend && npm run build",
    "build:web": "cd platforms/web && npm run build",
    "test": "npm run test:backend && npm run test:web",
    "test:backend": "cd backend && npm test",
    "test:web": "cd platforms/web && npm test",
    "lint": "npm run lint:backend && npm run lint:web",
    "lint:backend": "cd backend && npm run lint",
    "lint:web": "cd platforms/web && npm run lint",
    "install:all": "npm install && npm run install:shared && npm run install:backend && npm run install:web",
    "install:shared": "cd shared && npm install",
    "install:backend": "cd backend && npm install",
    "install:web": "cd platforms/web && npm install"
  },
  "keywords": [
    "diary",
    "journal",
    "cross-platform",
    "react",
    "electron",
    "react-native"
  ],
  "author": "LifeBook Team",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^7.6.0"
  },
  "workspaces": [
    "shared",
    "platforms/web",
    "platforms/desktop",
    "platforms/mobile",
    "backend"
  ]
}